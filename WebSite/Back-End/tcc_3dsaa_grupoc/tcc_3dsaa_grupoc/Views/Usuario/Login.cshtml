@model tcc_3dsaa_grupoc.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {
    <link href="~/Content/index.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/login_cadastro.css" rel="stylesheet" type="text/css" />
}

<!--FORMULÁRIO DE LOGIN-->
<div id="login">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h1>Login</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>
            @Html.Label("Nome / E-mail", htmlAttributes: new { @for = "nome_usuario" })
            @Html.EditorFor(model => model.nome_usuario, new { htmlAttributes = new { @placeholder = "ex. contato@htmlecsspro.com" } })
            @Html.ValidationMessageFor(model => model.nome_usuario, "", new { @class = "text-danger" })
        </p>

        <p>
            @Html.Label("Senha", htmlAttributes: new { @for = "senha_usuario" })
            @Html.EditorFor(model => model.senha_usuario, new { htmlAttributes = new { @placeholder = "ex. senha" } })
            @Html.ValidationMessageFor(model => model.senha_usuario, "", new { @class = "text-danger" })
        </p>
        
        <!--
        <p>
            <input type="checkbox" name="manterlogado" id="manterlogado" value="" />
            <label for="manterlogado">Manter-me logado</label>
        </p>
        -->
        
        <p>
            <input type="submit" value="Logar" />
        </p>
        
        <p class="link">
            Ainda não tem conta?
            @Html.ActionLink("Cadastre-se", "Cadastrar")
        </p>
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
